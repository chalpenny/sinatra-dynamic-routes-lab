
<% @number1 = params[:number1].to_i
    @number2 = params[:number2].to_i %>
    <% if params[:operation] == "add" %>
        <p> (@number1 + @number2).to_s </p>
    <% elsif params[:operation] == "subtract" %>
        <p> (@number1 - @number2).to_s </p>
    <% elsif params[:operation] == "multiply" %>
        <p> (@number1 * @number2).to_s </p>
    <% else params[:operation] == "divide" %>
        <p> (@number1 / @number2).to_s </p>    
    <% end %>